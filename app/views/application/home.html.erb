<div class="container-fluid">
	<% @errors.each { |error| %>
		<p><%= error %><p>
	<% } %>
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-3">
				</div>
				<div class="col-md-6">
					<form class="form-inline center" role="form" id="search-form" action="/search" method="post">
						<div class="form-group">
							<h3>Customer Name</h3>

							<!-- <input type="text" id="name" class="form-control" data-autocomplete="/autocomplete_customer_name"> -->
							<%= autocomplete_field_tag :name, params[:name], "/autocomplete_customer_name", {class: "form-control", placeholder: "Name", type: "search"}%>
							<input type="hidden" id="id" name="id">
							<button type="submit" class="btn btn-default">Search</button>
						</div>
					</form>

					<script type="text/javascript" charset="utf-8">
					  $('#name').bind('railsAutocomplete.select', function(event, data){
							$('#id').val(data.item.id);
							// alert(data.item.id);
					  	$('#search-form').submit()
					  });
					</script>

				</div>
				<div class="col-md-3">
				</div>
			</div>
		</div>
	</div>
</div>
